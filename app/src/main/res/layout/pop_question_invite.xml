<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/question_invite_width"
    android:layout_height="@dimen/question_invite_height"
    app:cardCornerRadius="@dimen/button_corner_small"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_raduse_bg_white"
        android:gravity="center"
        android:orientation="horizontal"
        app:cardCornerRadius="@dimen/button_corner_small"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <com.zhiyicx.baseproject.widget.UserAvatarView
            android:id="@+id/iv_user_portrait"
            android:layout_width="@dimen/question_invite_portrait_width"
            android:layout_height="@dimen/question_invite_portrait_width"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/normal_for_dynamic_list_content"
            android:textSize="@dimen/size_icon_assist"/>

    </LinearLayout>
</android.support.v7.widget.CardView>