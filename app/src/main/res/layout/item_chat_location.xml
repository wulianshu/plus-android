<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_send_location"
    android:background="@color/white"
    android:padding="@dimen/spacing_mid">

    <com.zhiyicx.thinksnsplus.widget.EnableCheckBox
        android:id="@+id/cb_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_mid"
        android:button="@drawable/selector_circle_post_synchro"/>



    <TextView
        android:layout_toLeftOf="@+id/cb_checkbox"
        android:id="@+id/tv_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="环球中心"
        android:textColor="@drawable/selector_create_location"
        android:textSize="@dimen/size_content"/>

    <TextView
        android:layout_marginTop="@dimen/spacing_small_3dp"
        android:layout_toLeftOf="@+id/cb_checkbox"
        android:id="@+id/tv_location_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_location_name"
        android:text="武侯大道"
        android:textColor="@color/normal_for_assist_text"
        android:textSize="@dimen/size_note_assist"/>



</RelativeLayout>