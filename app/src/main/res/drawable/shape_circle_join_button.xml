<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 灰色阴影 -->
    <item
        android:left="1px"
        android:top="1px">
        <shape>
            <stroke
                android:width="@dimen/divider_line"
                android:color="@android:color/darker_gray"/>
            <corners android:radius="@dimen/button_corner_small"/>
        </shape>
    </item>

    <!-- 白色前景 -->
    <item
        android:bottom="1px"
        android:right="1px"
        >
        <shape>
            <corners android:radius="@dimen/button_corner_small"/>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="@dimen/divider_line"
                android:color="@color/white"/>
        </shape>
    </item>
</layer-list>